<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/movie_card">

    <RelativeLayout
        android:id="@+id/cardContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/poster_margin"/>

        <LinearLayout
            android:id="@+id/movie_summury"
            android:layout_toRightOf="@+id/movie_poster"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_info_margin_top"
                android:layout_marginBottom="@dimen/movie_info_margin_bottom"
                android:textSize="@dimen/movie_title_text"
                android:textColor="@color/movie_title_black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/movie_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/movie_info_margin_bottom"
                android:textSize="@dimen/movie_other_text"
                android:textColor="@color/movie_others"/>

            <TextView
                android:id="@+id/movie_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movie_other_text"
                android:textColor="@color/movie_others"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>